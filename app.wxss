.container {
  /* height: 100%; */
  width:100%;
   min-height:1206rpx; 
  /* height:2412rpx; */
   display: flex; 
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  padding: 20rpx 22rpx;
  box-sizing: border-box;
  font-size:12pt;
  /*color:#636363;*/
}
/***收藏列表、搜索列表***/
.like-list{
  width:100%;
}
.like-list::after{
  content: '';
  display: block;
  clear: both;
}
.like-item{
  width:100%;
  height:240rpx;
  padding:24rpx;
   /* background:#F3EBDF;  */
   background:rgba(255,255,255,1);
   /* border-bottom:1px solid #c3c3c3; */
  position: relative;
  box-sizing: border-box;
   margin-bottom:30rpx;
   box-shadow: 0 2px 6px 0 rgba(0,0,0,.12), 0 0 8px 0 rgba(0,0,0,.04);
}
.like-item image{
  width:250rpx;
  height:100%;
}
.right-content view:last-child{
    color:#C3C3C3;
}
.right-content text{
    font-size:10pt;
    /**margin-top:17rpx;**/
    color:#C3C3C3;
    margin-right:20rpx;
    margin-left:6rpx;
    display:inline-block;
}
.right-content image{
    width:30rpx;
    height:30rpx;
    vertical-align:middle;
    position:relative;
    top:-2rpx;
}
.right-content{
  width:100%;
  height:190rpx;
  padding-left:298rpx;
  padding-right:30rpx;
  box-sizing: border-box;
  position: absolute;
  left:0;
  top:50%;
  transform: translate(0,-50%);
}
.right-content view{
  width:100%;
   word-break: break-all;
    text-overflow: ellipsis;
    white-space: nowrap;
     overflow: hidden;
    -webkit-box-orient: vertical;
    font-size:10pt;
     margin-top:12rpx;
}

