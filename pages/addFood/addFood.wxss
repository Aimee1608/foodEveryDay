/* pages/addFood/addFood.wxss */
.foodBox{
    width:100%;
    box-sizing:border-box;
    border-bottom: 1px solid #ddd;
    padding:20rpx 0 20rpx 90rpx;
    color:#000;
    position:relative;
}
.foodBox input{
    display:inline-block;
}
.foodBox text{
    width:200rpx;
    position:absolute;
    left:0;
    top:20rpx;
}
.bigImg{
    width:100%;
    height:160rpx;
    /*line-height: 160rpx;*/
    position: relative;
}
.bigImg text{
    top:50%;
    transform:translate(0,-50%);
}
.bigImg image.foodUrl{
    width:120rpx;
    height:120rpx;
    /*display:inline-block;*/
    vertical-align: middle;
}
.r-arrow{
    width:30rpx;
    height:30rpx;
    /* vertical-align: middle; */
   position: absolute;
    top:55rpx;
    right:0;
    
}
.foodText{
    position: relative;
}
.foodText textarea{
    width:100%;
}
.title{
    height:96rpx;
}
.title input{
    position:relative;
    height:44rpx;
    line-height:44rpx;
    min-height:44rpx;
    top:6rpx;
}
.title text{
    top:50%;
    transform:translate(0,-50%);
}
.class-name{
    padding-left:170rpx;
}
.class-name .picker{
    /*color:#ddd;*/
}
.class-name .r-arrow,.handle_time .r-arrow{
    top:50%;
    transform:translate(0,-50%);
}

.thumbnail .inputFile{
    width:100%;
}
.thumbnail .inputFile .thumbnailImg{
    width:130rpx;
    height:130rpx;
    margin:0 15rpx 15rpx 0;
    display:inline-block;
    position:relative;
}
.thumbnailImg image{
    width:100%;
    height:100%;
    vertical-align:middle;
}
.thumbnailImg icon{
    position:absolute;
    right:0;
    top:0;
}
.thumbnail .foodUrl{
    width:160rpx;
    height:160rpx;
    vertical-align:middle;
}

.inventory text{
    top:30rpx;
}
.inventory-btn button{
    height:70rpx;
    line-height:70rpx;
    border:none;
    background:#FFCC66;
    color:#fff;
}
.inventory-btn button::after{
     border:none;
}

.inventoryList{
    width:100%;
    margin-top:24rpx;
}
.inventoryItem{
    width:100%;
    margin-bottom:20rpx;
    position:relative;
}
.inventoryItem input{
    width:260rpx;
    height:70rpx;
    line-height:70rpx;
    margin-right:20rpx;
    float:left;
    border:1px solid #ddd;
}
.inventoryItem:after{
    content:'';
    display:block;
    clear:both;
}
.inventoryItem image{
    width:50rpx;
    height:50rpx;
    position:absolute;
    right:0;
    top:10rpx;
}

.step,.complexity ,.thumbnail ,.handle_time{
    padding-left:170rpx;
}
.tip{
    padding-left:130rpx;
}
.submit{
    width:100%;
    margin:40rpx 0;
}
.submit button{
    background:#FFCC66;
    color:#fff;

}

.submit button::after{
    border:none;
}



