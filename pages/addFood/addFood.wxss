/* pages/addFood/addFood.wxss */
.foodBox{
    width:100%;
    border-bottom: 1px solid #ddd;
    padding:20rpx 0;
    color:#000;
}
.foodBox input{
    display:inline-block;
}
.bigImg{
    width:100%;
    height:120rpx;
    line-height: 120rpx;
    position: relative;
}
.bigImg image.foodUrl{
    width:120rpx;
    height:120rpx;
    vertical-align: middle;
}
.r-arrow{
    width:30rpx;
    height:30rpx;
    /* vertical-align: middle; */
   position: absolute;
    top:55rpx;
    right:0;
    
}
.foodText{
    position: relative;
}
.foodText textarea{
    width:100%;
    padding-left:100rpx;
    box-sizing: border-box;
    float:right;
    /* top:20rpx; */
    
}
.foodText textarea::after{
    content:'';
    display:block;
    clear:both;
}