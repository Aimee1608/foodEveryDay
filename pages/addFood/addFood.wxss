/* pages/addFood/addFood.wxss */
.foodBox{
    width:100%;
    box-sizing:border-box;
    border-bottom: 1px solid #ddd;
    padding:60rpx 0;
    color:#000;
    position:relative;
    /* margin-bottom:30rpx; */
}
.foodBox input{
    display:inline-block;
    border-radius: 5px;
}
.foodBox .foodTitle{
    width:100%;
    margin-bottom:50rpx;
    text-align: center;
    display: block;
     color:#A37011; 
    /* position:absolute; */
     /* left:0;  */
    /* top:20rpx; */
}
.foodBox .content{
  width:100%;
   position:relative;
}
.foodBox rich-text{
    font-size:10pt;
    color:#808080;
    padding-top:10rpx; 
    display: block;
}
.foodBox textarea{
    margin:0;
    padding:4rpx 8rpx;
    background:rgba(255,255,255,1);
    width:100%;
    box-sizing: border-box;
    height:300rpx;
    min-height:300rpx;
    border-radius: 5px;
}
.foodBox .smallTip{
    width:100rpx;
    height:30rpx;
    line-height:30rpx;
    font-size:10pt;
    text-align:right;
    position:absolute;
    right:8rpx;
    bottom:5rpx;
    color:#808080;
}
.step .smallTip{
    /* bottom:6rpx; */
}

.bigImg image.foodUrl{
    width:120rpx;
    height:120rpx;
    /*display:inline-block;*/
    vertical-align: middle;
}
.r-arrow{
    width:80rpx;
    height:60rpx;
    text-align:right;
    line-height:60rpx;
    /* vertical-align: middle; */
    position: absolute;
    top:37rpx;
    right:0;
}
.r-arrow image{
    width:40rpx;
    height:40rpx;
    position: relative;
    top:10rpx;
}
.foodText{
    position: relative;
}


.title input{
  background:rgba(255,255,255,1);
  width:100%;
  box-sizing: border-box;
  padding-left:8rpx;
  height: 70rpx;
  line-height:70rpx;
}
.title  .smallTip{
    z-index: 3;
    bottom:26rpx;
}

.class-name .picker{
    /*color:#ddd;*/
    z-index: 1;
}
.class-name .r-arrow,.handle_time .r-arrow{
    top:50%;
    transform:translate(0,-50%);
}
.class-name .r-arrow{
  z-index: 0;
}
.thumbnail .r-arrow{
    top:20rpx;
}
.thumbnail .inputFile{
    width:100%;
}
.thumbnail .inputFile .thumbnailImg{
    width:130rpx;
    height:130rpx;
    margin:0 15rpx 15rpx 0;
    display:inline-block;
    position:relative;
}
.thumbnailImg image{
    width:100%;
    height:100%;
    vertical-align:middle;
}
.thumbnailImg icon{
    position:absolute;
    right:-4rpx;
    top:-4rpx;
}
.thumbnail .foodUrl{
    width:160rpx;
    height:160rpx;
    vertical-align:middle;
}

.inventory input{
    padding:0 6rpx;
    box-sizing:border-box;
}
.inventory-btn button{
    height:70rpx;
    line-height:70rpx;
    border:none;
    background:#FFCC66;
    color:#fff;
}
.inventory-btn button::after{
     border:none;
}

.inventoryList{
    width:100%;
    margin-top:24rpx;
}
.inventoryItem{
    width:100%;
    margin-bottom:20rpx;
    position:relative;
}
.inventoryItem input{
    width:300rpx;
    height:70rpx;
    line-height:70rpx;
    margin-right:20rpx;
    float:left;
    border:1px solid #ddd;
}
.inventoryItem:after{
    content:'';
    display:block;
    clear:both;
}
.inventoryItem image{
    width:50rpx;
    height:50rpx;
    position:absolute;
    right:0;
    top:10rpx;
}
.submit{
    width:100%;
    margin:40rpx 0;
}
.submit button{
    background:#FFCC66;
    color:#fff;

}

.submit button::after{
    border:none;
}
.complexity .content{
  text-align: center;
}


