/* pages/addFood/addFood.wxss */
.foodBox{
    width:100%;
    box-sizing:border-box;
    border-bottom: 1px solid #ddd;
    padding:20rpx 0 20rpx 90rpx;
    color:#000;
    position:relative;
}
.foodBox input{
    display:inline-block;
}
.foodBox text{
    width:200rpx;
    position:absolute;
    left:0;
    top:20rpx;
}
.bigImg{
    width:100%;
    height:160rpx;
    /*line-height: 160rpx;*/
    position: relative;
}
.bigImg text{
    top:50%;
    transform:translate(0,-50%);
}
.bigImg image.foodUrl{
    width:120rpx;
    height:120rpx;
    /*display:inline-block;*/
    vertical-align: middle;
}
.r-arrow{
    width:30rpx;
    height:30rpx;
    /* vertical-align: middle; */
   position: absolute;
    top:55rpx;
    right:0;
    
}
.foodText{
    position: relative;
}
.foodText textarea{
    width:100%;
}
.title input{
    position:relative;
    top:5rpx;

   /*line-height:104rpx;*/
}
.title text{
    top:50%;
    transform:translate(0,-50%);
}
.class-name{
    padding-left:170rpx;
}
.class-name .picker{
    color:#ddd;
}
.inventoryList{
    width:100%;
}
.inventoryItem{
    width:100%;
    margin-bottom:10rpx;
}
.inventoryItem input{
    width:250rpx;
    margin-right:20rpx;
    float:left;
    border:1px solid #666;
}
.inventoryItem:after{
    content:'';
    display:block;
    clear:both;
}
.inventoryItem image{
    width:60rpx;
    height:60rpx;
    float:right;
}
.step,.complexity ,.thumbnail ,.handle_time{
    padding-left:170rpx;
}
.tip{
    padding-left:130rpx;
}






