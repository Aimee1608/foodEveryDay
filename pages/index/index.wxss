}
.swiper-box image{
  width:100%;
  height:100%;
}
/**今日推荐**/
.todayNew{
  width:100%;
  position: relative;
  font-size: 13pt;
}

.todayTitle{
  width:100%;
  min-height: 60rpx;
  text-align: center;
  margin: 50rpx 0 40rpx 0 ;
  /* color:#636363; */
   color:#A37011;
   position: relative;
}
.todayTitle text{
  display: inline-block;
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  background: #F9F5EC;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 1;
}
.todayTitle:after{
  content:"";
  display: block;
  width:100%;
  height: 1px;
  border-radius: 1rpx; 
  background: #A37011;
  position: absolute;
  left:0;
  top: 50%;
}
.todayList{
  width:722rpx;
  box-sizing: border-box;
  /* padding-right:-14rpx; */
  flex-direction:row;
 
}
.todayList:after{
  content: "";
  display: block;
  clear:both;
}
.todayItem:after{
  content: "";
  display: block;
  clear:both;
}
.todayItem{
  width:346rpx;
  height:auto;
  padding:14rpx;
  padding-bottom:0;
  margin-bottom:30rpx;
  box-sizing: border-box;
  text-align: center;
  background:#fff;
   /* float:left;  */
   display: inline-block;
   margin-right:14rpx; 
   box-shadow: 0 2px 6px 0 rgba(0,0,0,.12), 0 0 8px 0 rgba(0,0,0,.04);
   position: relative;
}
.todayItem image{
  width:317rpx;
  height:292rpx;
}
.todayItem text{
    width:100%;
     height:60rpx; 
    line-height: 60rpx;
    text-align: center;
    color:#636363;
    font-size:11pt;
}
.textInfoBox{
   width:100%;
    height:auto;
    color:#636363;
    font-size:11pt;
    position: relative;
}
.textInfoBox rich-text{
    font-size:11pt;
    position: relative;
    top: -36rpx;
    /* margin-top:50rpx; */
}
.authInfo{
   position: relative;
    left:0;
    top: -34rpx;
