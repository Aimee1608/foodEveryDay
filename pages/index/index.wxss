/**搜索框**/
.section{
  width:100%;
  height:80rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 80rpx;
  border-radius: 10rpx;
  overflow: hidden;
   /* border: 1px solid rgba(200,200,200,0.8);   */
  /* border: 1px solid #eeb211;   */
  background:#fff; 
  position: relative;
  margin-bottom:40rpx;
  box-shadow: 0 2px 6px 0 rgba(0,0,0,.12), 0 0 8px 0 rgba(0,0,0,.04);
}
text.search{
  background:#fff;
  /* padding-top:25rpx; */
  /* padding-right:50rpx; */
   width:100%;
   /* height:100%;  */
   border-radius: 10rpx;
  line-height:80rpx;
   color:#A37011;
}
.section image{
  position: absolute;
  right:20rpx;
  top:50%;
  transform: translate(0,-50%);
