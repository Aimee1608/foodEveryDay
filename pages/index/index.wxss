
/**index.wxss**/
/**搜索框**/
.section{
  width:100%;
  height:80rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 80rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 1px solid rgba(200,200,200,0.8);   
  background:#fff; 
  position: relative;
  margin-bottom:20rpx;
}
text.search{
  background:#fff;
  /* padding-top:25rpx; */
  /* padding-right:50rpx; */
   width:100%;
   /* height:100%;  */
   border-radius: 10rpx;
  line-height:80rpx;
   color:#A37011;
}
.section image{
  position: absolute;
  right:20rpx;
  top:50%;
  transform: translate(0,-50%);
  width:50rpx;
  height:50rpx;
  opacity: 0.5;
}
/***轮播图***/
.swiper-box{
  width:100%;
  height:300rpx;
}
.swiper-box swiper{
  height:300rpx;
}
.swiper-box navigator{
  width:100%;
  height:100%;
}
.swiper-box image{
  width:100%;
  height:100%;
}
/**今日推荐**/
.todayNew{
  width:100%;
  position: relative;
  font-size: 13pt;
}
.todayTitle{
  width:100%;
  text-align: center;
  margin: 40rpx 0 20rpx 0 ;
  /* color:#636363; */
   color:#A37011;
}
.todayList{
  width:722rpx;
  box-sizing: border-box;
  /* padding-right:-14rpx; */
  flex-direction:row;
 
}
.todayList:after{
  content: "";
  display: block;
  clear:both;
}
.todayItem:after{
  content: "";
  display: block;
  clear:both;
}
.todayItem{
  width:346rpx;
  height:auto;
  padding:14rpx;
  padding-bottom:0;
  margin-bottom:30rpx;
  box-sizing: border-box;
  text-align: center;
  background:#fff;
   /* float:left;  */
   display: inline-block;
   margin-right:14rpx; 
}
.todayItem image{
  width:317rpx;
  height:292rpx;
}
.todayItem text{
    width:100%;
    height:60rpx;
    line-height: 60rpx;
    text-align: center;
    color:#636363;
    font-size:11pt;
}
.clearFloat{
  clear:both;
}

.loadMore{
    text-align: center;
}

