/**index.wxss**/
/**搜索框**/
.section{
  width:100%;
  height:100rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 100rpx;
   border-radius: 10rpx;
  background:rgba(200,200,200,0.5);
  position: relative;
  margin-bottom:20rpx;
}
input.search{
  padding-top:25rpx;
  padding-right:50rpx;
}
.section image{
  position: absolute;
  right:20rpx;
  top:50%;
  transform: translate(0,-50%);
  width:50rpx;
  height:50rpx;
  opacity: 0.5;
}
/**今日推荐**/
.todayNew{
  width:100%;
  position: relative;
}
.todayTitle{
  width:100%;
  text-align: center;
  margin: 11rpx 0 ;
}
.todayList{
  width:722rpx;
  box-sizing: border-box;
  /* padding-right:-14rpx; */
  flex-direction:row;
}
.todayList:after{
  content: "";
  display: block;
  clear:both;
}
.todayItem:after{
  content: "";
  display: block;
  clear:both;
}
.todayItem{
  width:346rpx;
  height:360rpx;
  padding:14rpx;
  margin-bottom:15rpx;
  box-sizing: border-box;
  text-align: center;
  background:#fff;
   /* float:left;  */
   display: inline-block;
   margin-right:14rpx; 
}
.todayItem image{
  width:317rpx;
  height:292rpx;
}
.clearFloat{
  clear:both;
}





