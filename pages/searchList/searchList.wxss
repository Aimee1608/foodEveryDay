/**搜索框**/
.section{
  width:100%;
  height:80rpx;
   text-align: center; 
  vertical-align: middle;
  line-height: 80rpx;
   border-radius: 10rpx;
   overflow: hidden;
     /* border: 1px solid rgba(200,200,200,0.8);   */
  /* background:rgba(200,200,200,0.5); */
  background:#fff;
  position: relative;
  margin-bottom:20rpx;
  box-shadow: 0 2px 6px 0 rgba(0,0,0,.12), 0 0 8px 0 rgba(0,0,0,.04);
}
input.search{
  padding-top:15rpx;
  padding-right:50rpx;
   color:#A37011;
   font-size: 12pt;
}
.phcolor{
    color:#A37011;
}
.section image{
  position: absolute;
  right:20rpx;
  top:50%;
  transform: translate(0,-50%);
  width:50rpx;
  height:50rpx;
  opacity: 0.5;
}
.className{
    width:100%;
    margin-bottom:20rpx;
    padding:10rpx 0;
    /* background:#eee; */
    text-align: center;
    color:#666;
    font-size:11pt;
}

