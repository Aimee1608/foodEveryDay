/* pages/aboutFoodEveryDay/aboutFoodEveryDay.wxss */
.about-img{
    width:100%;
    height:350rpx;
    position:relative;
}
.about-img image{
    width:150rpx;
    height:150rpx;
    position:absolute;
    left:50%;
    top:40rpx;
    transform:translate(-50%,0);
}

.name{
    width:100%;
    position:absolute;
    left:50%;
    top:210rpx;
    transform:translate(-50%,0);
    text-align:center;
}
.about-img text:last-child{
    width:100%;
    position:absolute;
    left:50%;
    top:280rpx;
    transform:translate(-50%,0);
    text-align:center;
}
.content{
    width:100%;
    padding:40rpx;
    box-sizing:border-box;
}
.content view{
     text-indent: 2em;
     text-align: justify;
     margin-bottom:20rpx;
}


