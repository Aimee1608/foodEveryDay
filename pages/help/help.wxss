/* pages/help/help.wxss */
.about-img{
    width:100%;
    height:300rpx;
    position:relative;
}
.about-img image{
    width:150rpx;
    height:150rpx;
    position:absolute;
    left:50%;
    top:40rpx;
    transform:translate(-50%,0);
    border-radius: 50%;
}

.about-img text{
    width:100%;
    position:absolute;
    left:50%;
    top:210rpx;
    transform:translate(-50%,0);
    text-align:center;
}
.content{
    width:100%;
    height:600rpx;
    position: relative;
}
.content text{
    width:100%;
    padding:0 40rpx;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    top: 0;
    text-indent: 2em;
    text-align: justify;
}
.content image{
    width: 400rpx;
    height: 400rpx;
    position: absolute;
    left:50%;
    top:120rpx;
    transform: translate(-50%,0);
}


