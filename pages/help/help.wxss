/* pages/help/help.wxss */
.about-img{
    width:100%;
    height:300rpx;
    position:relative;
    text-align: center;
}
.about-img image{
    width:150rpx;
    height:150rpx;
    top:40rpx;
    border-radius: 50%;
}
.about-img rich-text{
    width:100%;
    text-align:center;
}
.content{
    width:100%;
    padding: 0 40rpx;
    box-sizing: border-box;
    height:600rpx;
    position: relative;
}
.content rich-text{
    width:100%;   
    text-indent: 2em;
    text-align: justify;
}
.content view{
  width: 100%;
  text-align: center;
   margin: 40rpx 0 50rpx 0;
}
.content image{
    width: 400rpx;
    height: 400rpx;
    
}


