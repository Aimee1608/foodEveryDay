/* pages/select/select.wxss */
.select-list{
  width:100%;
}
.select-item{
  width:100%;
  padding-bottom:10rpx;
}
.select-title{
  width:100%;
  text-align: center;
  padding:20rpx 0;
  color:#000;
  font-weight:bold;
}
.select-iconList{
  width:100%;
  /*height:210rpx;*/
  text-align: center;
  overflow: hidden;
}
.select-iconitem{
  margin:20rpx;
  /* margin-bottom:20rpx; */
  width: 180rpx;
  height:160rpx;
  line-height: 180rpx;
  box-sizing: border-box;
  color:#7ac873;
  display:inline-block;
  position: relative;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04);
}
.select-iconitem image{
  width:100%;
  height:100%;
}
.select-iconitem text{
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.4);
  color: #fff;
  position: absolute;
  left:0;
  top:0;
}


