/* pages/user/user.wxss */
.user-container{
    padding:0;
}
.userinfo {
  margin-bottom:30rpx;
  width:100%;
  height:280rpx;
  align-items: center;
  vertical-align: center;
  position: relative;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  position: absolute;
    left:50%;
    top:40rpx;
    transform: translate(-50%,0);
}
.userinfo-text{
  width:100%;
  box-sizing: border-box;
  text-align:center;
  position: absolute;
    left: 50%;
  top:200rpx;
  transform: translate(-50%,0);
}
.userinfo-nickname {
  /* color: #aaa; */
  /* padding-left:148rpx; */
  vertical-align: center;
}
.likeCount{
  font-size:10pt;
  margin-top:14rpx;
}
.loadMore{
  width:100%;
  text-align: center;
}

page{
    background:#F9F5EC;
}
.user-common{
    width:100%;
    height:84rpx;
    position:relative;
    background:#fff;
    /* border-top:1px solid #E5E5E7; */
     /* border-bottom:1px solid #E5E5E7; */
    box-sizing:border-box;
}

.user-common image:first-child{
    width:50rpx;
    height:50rpx;
    position:absolute;
    left:22rpx;
    top:50%;
    transform:translate(0,-50%);
}
.user-common image:last-child{
    width:30rpx;
    height:30rpx;
    right:20rpx;
    position:absolute;
    top:50%;
    transform:translate(0,-50%);
}
.user-common text{
    width:350rpx;
    height:50rpx;
    line-height:50rpx;
    position:absolute;
    left:80rpx;
    top:50%;
    transform:translate(0,-50%);
}
.one-common text{
    left:102rpx;
}
.one-common{
    margin-bottom:40rpx;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04);
}
.myFood{
    width:100%;
    padding-left:22rpx;
    background:#fff;
    margin-bottom:40rpx;
    /* border-top:1px solid #E5E5E7; */
    /* border-bottom:1px solid #E5E5E7; */
    box-shadow: 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04);
    box-sizing:border-box;
}
.myFood .user-common{
    border-top:none;
     /* box-shadow: 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04);  */
}
.myFood .user-common image:first-child{
    left:0rpx;
}
.myFood .topborder{
    /* border-bottom:none; */
    border-top:1px solid #E5E5E7;
}
